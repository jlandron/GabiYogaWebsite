{
  "name": "yoga-website",
  "version": "1.0.0",
  "description": "Gabi Yoga Website with Database",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "seed": "node database/seed.js",
    "init-db": "node -e \"require('./database/schema').initializeDatabase()\"",
    "reset-db": "NODE_ENV=development node database/seed.js",
    "setup-images": "node setup-image-storage.js",
    "migrate-images": "node migrate-images-cli.js",
    "add-file-path-column": "node database/add-file-path-column.js",
    "export-templates": "node database/seed-templates.js --export-only",
    "import-templates": "node database/seed-templates.js --import-only",
    "sync-templates": "node database/seed-templates.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:dom": "jest --config jest.dom.config.js",
    "test:integration": "PORT=5001 jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:dom && npm run test:integration",
    "deploy": "npm test && cd infrastructure && cdk deploy --all",
    "deploy:skip-tests": "cd infrastructure && cdk deploy --all",
    "cdk-bootstrap": "cd infrastructure && cdk bootstrap",
    "cdk-synth": "cd infrastructure && cdk synth"
  },
  "dependencies": {
    "aws-sdk": "^2.1442.0",
    "bcryptjs": "^2.4.3",
    "browser-image-compression": "^2.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "puppeteer": "^24.6.1",
    "quill": "^2.0.3",
    "sqlite3": "^5.1.6",
    "stripe": "^12.18.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "aws-cdk": "^2.100.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.2.69",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
